import java.util.Scanner;

public class menu {

	public static void main(String[] args) {
		
        int choice;
        Scanner scanner = new Scanner(System.in);
        
        while(true) {
        	 
            //Creating menu
            System.out.println("1.Display Main menu");
            System.out.println("2.Conversion Sub menu");
            System.out.println("3.Calculation Sub Menu");
            System.out.println("Press 4 for Division");
            System.out.println("Press 5 to Quit\n \n ");
        
          //Asking user to make choice
            System.out.println("Make your choice");
            choice = scanner.nextInt();
            
            switch (choice) {
            
            case 1:
            
        	 void displayMainMenu(){
             	
        		 System.out.println("Conversion Menu");
        		 System.out.println("Calculation Menu");
             	
             } 
        	 
             void displayConversionSubMenu() {
            	 
            	 System.out.println("Conversion Length Menu");
        		 System.out.println("Convertsion Weight Menu");
        		 System.out.println("conversion temperature Menu");
             }
             	
             
             void displayCalculationSubMenu() {
            	 
            	 System.out.println("Sum of series");
        		 System.out.println("Sum of array");
        		 System.out.println("Product of series");
        		 System.out.println("Product of array");
             	
             }
             void displayConversionLengthSubmenu() {
            	 
            	 System.out.println("KM to Miles");
        		 System.out.println("Miles to KM");
        		 
             	
             }
             void displayConversionWeightSubmenu() {
            	 
            	 System.out.println("KG to Pounds");
        		 System.out.println("Pounds to KG");
             	
             }
             void displayConversionTemperatureSubmenu() {
            	 
            	 System.out.println("Celsius to Farenheit");
        		 System.out.println("Fraenheit to Celsius");
        		 
        		 
        		 
             }
             	
            
             }
       


	}


}
}
